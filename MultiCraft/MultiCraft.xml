<GuiXml>
    <Controls>
        <TopLevelControl name="MultiCraft" mouseEnabled="false" hidden="true">
            <Dimensions x="200" y="100" />
            <Anchor point="BOTTOM" />
  
			<OnInitialized>
				MultiCraft_Initialize(self)
			</OnInitialized>
			
			<Controls>
				<Label name="$(parent)CreationLabel" font="ZoFontKeybindStripDescription" color="C5C29E" wrapMode="ELLIPSIS" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="1">
					<Anchor point="BOTTOMLEFT" offsetX="148" offsetY="-12"/>
				</Label>
				<Label name="$(parent)DeconstructionLabel" font="ZoFontKeybindStripDescription" color="C5C29E" wrapMode="ELLIPSIS" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="1">
					<Anchor point="BOTTOMLEFT" offsetX="310" offsetY="-12"/>
				</Label>
				<Slider name="$(parent)Slider" orientation="HORIZONTAL" step=1 inherits="ZO_Slider" enabled="true" mouseEnabled="true" allowDraggingFromThumb="true">
					<Anchor point="TOP" offsetY="20" />
					
					<OnUpdate>
						MultiCraft_SetSliderLabelValue()
					</OnUpdate>
				</Slider>
			</Controls>
        </TopLevelControl>
	</Controls>
</GuiXml>